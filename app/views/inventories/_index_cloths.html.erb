<% @cloths.each do |cloth| %>
  <tr>
    <td><%= cloth.distintion %></td>
    <td><%= cloth.height %></td>
    <td><%= cloth.widht %></td>
    <td><%= cloth.depth %></td>
    <td><%= cloth.color %></td>
    <td><%= cloth.feston %></td>
    <td><%= cloth.tipo %></td>
    <td><%= cloth.categoty_id %></td>
    <td><%= link_to 'Show', cloth %></td>
    <td><%= link_to 'Edit', edit_cloth_path(cloth) %></td>
    <td><%= link_to 'Destroy', cloth, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

